<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/abc_btn_check_material"
        android:scaleType="fitXY"
        android:padding="3dp"
        android:id="@+id/evaluation_main_imageview"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_toRightOf="@+id/evaluation_main_imageview"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="제목"
            android:textColor="@color/black"
            android:singleLine="true"
            android:id="@+id/evaluation_main_item_title"
            android:textSize="20dp"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"
            android:textColor="@color/black"
            android:id="@+id/evaluation_main_item_content"
            android:textSize="15dp"
            android:singleLine="true"
            android:layout_marginBottom="2dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="작성자 : "
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:id="@+id/evaluation_main_item_nickname"/>




            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:textColor="@color/black"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            android:maxLength="10"
            android:id="@+id/evaluation_main_item_date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지역 : "
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시"
            android:textColor="@color/black"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:id="@+id/evaluation_main_text_si"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구"
            android:textColor="@color/black"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:id="@+id/evaluation_main_text_gu"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조회수 : "
                android:textColor="@color/material_blue_grey_800"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조회수"
                android:layout_marginRight="5dp"
                android:textColor="@color/material_blue_grey_800"
                android:id="@+id/evaluation_main_item_hit"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="댓글 수 : "
                android:textColor="@color/sa_green"
                android:singleLine="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="댓글 수"
                android:textColor="@color/sa_green"
                android:singleLine="true"
                android:id="@+id/evaluation_main_item_comment"/>
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>